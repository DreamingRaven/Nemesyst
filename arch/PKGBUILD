# The following guidelines are specific to BZR, GIT, HG and SVN packages.
# Other VCS sources are not natively supported by makepkg yet.

# Maintainer: Your Name <GeorgeRavenCommunity@outlook.com>
pkgname=nemsyst-git # '-bzr', '-git', '-hg' or '-svn'
pkgver=0.9.r292
pkgrel=1
pkgdesc="Generalised, sequence-based, deep learning framework of the gods."
arch=('x86_64')
url="https://github.com/DreamingRaven/Nemesyst"
license=('MIT') # MIT is a special case store a copy in /usr/share/pkgname
groups=("nemesyst-base")
depends=('mongodb', 'python', 'python-pymongo', 'python-keras', 'python-pandas', 'python-numpy', 'python-h5py')
makedepends=() # 'bzr', 'git', 'mercurial' or 'subversion'
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=('nemesyst::git+https://github.com/DreamingRaven/Nemesyst#branch=master')
noextract=()
md5sums=('SKIP')

# Please refer to the 'USING VCS SOURCES' section of the PKGBUILD man page for
# a description of each element in the source array.

pkgver() {
	cd "$srcdir/${pkgname}"

# Git, tags available
#	printf "%s" "$(git describe --long | sed 's/\([^-]*-\)g/r\1/;s/-/./g')"

# Git, no tags available
	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
	cd "$srcdir/${pkgname}"
	#patch -p1 -i "$srcdir/${pkgname}.patch"
}

build() {
	cd "$srcdir/${pkgname}"
	#python3 nemesyst.py --toUpdate
}

check() {
	cd "$srcdir/${pkgname}"
	#make -k check
}

package() {
	cd "$srcdir/${pkgname}"
	#make DESTDIR="$pkgdir/" install
}
